void buildvanishing_platform() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, vanishtime;
        form.create_window("vanishing platform", false);
        int a = form.create_input_box("type the minimum &x of the platform area");
        int b = form.create_input_box("type the maximum &x of the platform area");
        int c = form.create_input_box("type the minimum &y of the platform area");
        int d = form.create_input_box("type the maximum &y of the platform area");
        int e = form.create_input_box("type the minimum &z of the platform area");
        int f = form.create_input_box("type the maximum &z of the platform area");
        int g = form.create_input_box("how many milliseconds should be waited before next vanish");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(g, nums, true);
        int ok = form.create_button("continue and select the platform type and sound", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx         = form.get_text(a);
            mmx        = form.get_text(b);
            my         = form.get_text(c);
            mmy        = form.get_text(d);
            mz         = form.get_text(e);
            mmz        = form.get_text(f);
            vanishtime = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || vanishtime == "") {
            speak("canceled");
            return;
        }

        string vanishtile = plattypemenu();
        if (vanishtile == "") return;

        string vanishsound = list_ambiences();
        if (vanishsound == "") return;

        send_reliable(peer_id, "addvanishing_platform vanishing_platform:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + vanishtime + ":" + vanishtile + ":" + vanishsound + ".ogg", 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, vanishtime;
        form.create_window("vanishing platform", false);
        int a = form.create_input_box("type the minimum &x of the platform area");
        int b = form.create_input_box("type the maximum &x of the platform area");
        int c = form.create_input_box("type the minimum &y of the platform area");
        int d = form.create_input_box("type the maximum &y of the platform area");
        int e = form.create_input_box("how many milliseconds should be waited before next vanish");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        int ok = form.create_button("continue and select the platform type and sound", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx         = form.get_text(a);
            mmx        = form.get_text(b);
            my         = form.get_text(c);
            mmy        = form.get_text(d);
            vanishtime = form.get_text(e);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || vanishtime == "") {
            speak("canceled");
            return;
        }

        string vanishtile = plattypemenu();
        if (vanishtile == "") return;

        string vanishsound = list_ambiences();
        if (vanishsound == "") return;

        send_reliable(peer_id, "addvanishing_platform vanishing_platform:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + vanishtime + ":" + vanishtile + ":" + vanishsound + ".ogg", 0);
    }
}