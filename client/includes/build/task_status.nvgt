void buildtask_status() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, item, amount;
        form.create_window("task status", false);
        int a = form.create_input_box("type the minimum &x of the task area");
        int b = form.create_input_box("type the maximum &x of the task area");
        int c = form.create_input_box("type the minimum &y of the task area");
        int d = form.create_input_box("type the maximum &y of the task area");
        int e = form.create_input_box("type the minimum &z of the task area");
        int f = form.create_input_box("type the maximum &z of the task area");
        int g = form.create_input_box("enter the &item name", "", "", 0, false, false);
        int h = form.create_input_box("enter the item &amount");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(h, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx     = form.get_text(a);
            mmx    = form.get_text(b);
            my     = form.get_text(c);
            mmy    = form.get_text(d);
            mz     = form.get_text(e);
            mmz    = form.get_text(f);
            item   = form.get_text(g);
            amount = form.get_text(h);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || item == "" || amount == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addtask_status task_status:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + item + ":" + amount, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, item, amount;
        form.create_window("task status", false);
        int a = form.create_input_box("type the minimum &x of the task area");
        int b = form.create_input_box("type the maximum &x of the task area");
        int c = form.create_input_box("type the minimum &y of the task area");
        int d = form.create_input_box("type the maximum &y of the task area");
        int e = form.create_input_box("enter the &item name", "", "", 0, false, false);
        int f = form.create_input_box("enter the item &amount");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx     = form.get_text(a);
            mmx    = form.get_text(b);
            my     = form.get_text(c);
            mmy    = form.get_text(d);
            item   = form.get_text(e);
            amount = form.get_text(f);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || item == "" || amount == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addtask_status task_status:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + item + ":" + amount, 0);
    }
}