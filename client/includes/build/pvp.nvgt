void buildpvp() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, mode;
        form.create_window("PVP zone", false);
        int a = form.create_input_box("type the minimum &x of the PVP area");
        int b = form.create_input_box("type the maximum &x of the PVP area");
        int c = form.create_input_box("type the minimum &y of the PVP area");
        int d = form.create_input_box("type the maximum &y of the PVP area");
        int e = form.create_input_box("type the minimum &z of the PVP area");
        int f = form.create_input_box("type the maximum &z of the PVP area");
        int g = form.create_input_box("type 0 to disable, 1 to force PVP on, 2 to force PVP off", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(g, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx   = form.get_text(a);
            mmx  = form.get_text(b);
            my   = form.get_text(c);
            mmy  = form.get_text(d);
            mz   = form.get_text(e);
            mmz  = form.get_text(f);
            mode = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || mode == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addpvp pvp:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + mode, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mode;
        form.create_window("PVP zone", false);
        int a = form.create_input_box("type the minimum &x of the PVP area");
        int b = form.create_input_box("type the maximum &x of the PVP area");
        int c = form.create_input_box("type the minimum &y of the PVP area");
        int d = form.create_input_box("type the maximum &y of the PVP area");
        int e = form.create_input_box("type 0 to disable, 1 to force PVP on, 2 to force PVP off", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx   = form.get_text(a);
            mmx  = form.get_text(b);
            my   = form.get_text(c);
            mmy  = form.get_text(d);
            mode = form.get_text(e);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mode == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addpvp pvp:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + mode, 0);
    }
}