void builditem_usage_restriction() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, itemo;
        form.create_window("item usage restriction", false);
        int a = form.create_input_box("type the minimum &x of the restriction area");
        int b = form.create_input_box("type the maximum &x of the restriction area");
        int c = form.create_input_box("type the minimum &y of the restriction area");
        int d = form.create_input_box("type the maximum &y of the restriction area");
        int e = form.create_input_box("type the minimum &z of the restriction area");
        int f = form.create_input_box("type the maximum &z of the restriction area");
        int g = form.create_input_box("item names. Use : to add new ones (e.g. coins: wood: metal)", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx    = form.get_text(a);
            mmx   = form.get_text(b);
            my    = form.get_text(c);
            mmy   = form.get_text(d);
            mz    = form.get_text(e);
            mmz   = form.get_text(f);
            itemo = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || itemo == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "additem_usage_restriction item_usage_restriction:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + itemo, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, itemo;
        form.create_window("item usage restriction", false);
        int a = form.create_input_box("type the minimum &x of the restriction area");
        int b = form.create_input_box("type the maximum &x of the restriction area");
        int c = form.create_input_box("type the minimum &y of the restriction area");
        int d = form.create_input_box("type the maximum &y of the restriction area");
        int e = form.create_input_box("item names. Use : to add new ones (e.g. coins: wood: metal)", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx    = form.get_text(a);
            mmx   = form.get_text(b);
            my    = form.get_text(c);
            mmy   = form.get_text(d);
            itemo = form.get_text(e);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || itemo == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "additem_usage_restriction item_usage_restriction:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + itemo, 0);
    }
}