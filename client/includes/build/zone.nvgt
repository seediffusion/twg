							mmx = form.get_text(b);
							my = form.get_text(c);
							mmy = form.get_text(d);
							t = form.get_text(e);
							if (form.is_pressed(ok)) {
								form.reset();
								break;
							} else if (form.is_pressed(can)) {
								form.reset();
								return;
							}
						}//while
						if (mx == "" || mmx == "" || my == "" || mmy == "" || t == "") {
							speak("canceled");
							return;
						}
						string ha = "";
						if (t != "") ha = ":" + t;
						string extra = "";
						int track = yesno("would you like this zone to be trackable via the zone tracker menu?");
						if (track == 1) extra = ":trackme";
						if (mx < min.x || mx > max.x ||
							mmx < min.x || mmx > max.x ||
							my < min.y || my > max.y ||
							mmy < min.y || mmy > max.y) {
							speak("error. Given coordinates are out of range");
							return;
						}
						send_reliable(peer_id, "addzone zone:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ha + extra, 0);
					}
