void buildreinforcement() {
    form.reset();
    string nums = "1234567890";
    string minreinforcement, maxreinforcement;
    form.create_window("reinforcement restriction", false);
    int a = form.create_input_box("enter the minimum &reinforcement");
    int b = form.create_input_box("enter the maximum &reinforcement");
    form.set_disallowed_chars(a, nums, true);
    form.set_disallowed_chars(b, nums, true);
    int ok = form.create_button("finish", false);
    int can = form.create_button("cancel", false, true);
    form.focus(a);

    while (true) {
        wait(5);
        form.monitor(); mainloop();
        minreinforcement = form.get_text(a);
        maxreinforcement = form.get_text(b);
        if (form.is_pressed(ok)) {
            form.reset();
            break;
        } else if (form.is_pressed(can)) {
            form.reset();
            return;
        }
    }

    if (minreinforcement == "" || maxreinforcement == "") {
        speak("canceled");
        return;
    }
    send_reliable(peer_id, "addreinforcement reinforcement:" + minreinforcement + ":" + maxreinforcement, 0);
}