void buildsign() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, signtext;
        form.create_window("sign", false);
        int a = form.create_input_box("type the minimum &x of the sign area");
        int b = form.create_input_box("type the maximum &x of the sign area");
        int c = form.create_input_box("type the minimum &y of the sign area");
        int d = form.create_input_box("type the maximum &y of the sign area");
        int e = form.create_input_box("type the minimum &z of the sign area");
        int f = form.create_input_box("type the maximum &z of the sign area");
        int g = form.create_input_box("enter the &text for the sign", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("continue and select the sign sound", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx       = form.get_text(a);
            mmx      = form.get_text(b);
            my       = form.get_text(c);
            mmy      = form.get_text(d);
            mz       = form.get_text(e);
            mmz      = form.get_text(f);
            signtext = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || signtext == "") {
            speak("canceled");
            return;
        }

        string signsound = list_signs();
        if (signsound == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addsign sign:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + signtext + ":" + signsound + ".ogg", 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, signtext;
        form.create_window("sign", false);
        int a = form.create_input_box("type the minimum &x of the sign area");
        int b = form.create_input_box("type the maximum &x of the sign area");
        int c = form.create_input_box("type the minimum &y of the sign area");
        int d = form.create_input_box("type the maximum &y of the sign area");
        int e = form.create_input_box("enter the &text for the sign", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        int ok = form.create_button("continue and select the sign sound", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx       = form.get_text(a);
            mmx      = form.get_text(b);
            my       = form.get_text(c);
            mmy      = form.get_text(d);
            signtext = form.get_text(e);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || signtext == "") {
            speak("canceled");
            return;
        }

        string signsound = list_signs();
        if (signsound == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addsign sign:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + signtext + ":" + signsound + ".ogg", 0);
    }
}