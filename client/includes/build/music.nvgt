void buildmusic() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz;
        form.create_window("music source", false);
        int a = form.create_input_box("type the minimum &x of the music area");
        int b = form.create_input_box("type the maximum &x of the music area");
        int c = form.create_input_box("type the minimum &y of the music area");
        int d = form.create_input_box("type the maximum &y of the music area");
        int e = form.create_input_box("type the minimum &z of the music area");
        int f = form.create_input_box("type the maximum &z of the music area");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("continue and select the music file", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            mz  = form.get_text(e);
            mmz = form.get_text(f);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "") {
            speak("canceled");
            return;
        }

        string soundfile = list_musics();
        if (soundfile == "") {
            speak("canceled");
            return;
        }
        srcv(soundfile);

        string temp = "";
        int amb = yesno("would you like this music to work as an ambience?");
        if (amb == 1) temp = ":1";

        send_reliable(peer_id, "addmusic music:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + volume + ":" + pitch + ":" + soundfile + ".ogg" + temp, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy;
        form.create_window("music source", false);
        int a = form.create_input_box("type the minimum &x of the music area");
        int b = form.create_input_box("type the maximum &x of the music area");
        int c = form.create_input_box("type the minimum &y of the music area");
        int d = form.create_input_box("type the maximum &y of the music area");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        int ok = form.create_button("continue and select the music file", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "") {
            speak("canceled");
            return;
        }

        string soundfile = list_musics();
        if (soundfile == "") {
            speak("canceled");
            return;
        }
        srcv(soundfile);

        string temp = "";
        int amb = yesno("would you like this music to work as an ambience?");
        if (amb == 1) temp = ":1";

        send_reliable(peer_id, "addmusic music:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + volume + ":" + pitch + ":" + soundfile + ".ogg" + temp, 0);
    }
}