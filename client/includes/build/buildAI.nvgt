void buildAI() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, AIt, AIm, AIn;
        form.create_window("AI spawner", false);
        int a = form.create_input_box("type the minimum &x of the AI area");
        int b = form.create_input_box("type the maximum &x of the AI area");
        int c = form.create_input_box("type the minimum &y of the AI area");
        int d = form.create_input_box("type the maximum &y of the AI area");
        int e = form.create_input_box("type the minimum &z of the AI area");
        int f = form.create_input_box("type the maximum &z of the AI area");
        int g = form.create_input_box("how many milliseconds should be waited before next AI spawning?");
        int h = form.create_input_box("maximum amount of AI");
        int i = form.create_input_box("AI names. Use : to add new ones (e.g. lion: boar: bear)", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(g, nums, true);
        form.set_disallowed_chars(h, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx   = form.get_text(a);
            mmx  = form.get_text(b);
            my   = form.get_text(c);
            mmy  = form.get_text(d);
            mz   = form.get_text(e);
            mmz  = form.get_text(f);
            AIt  = form.get_text(g);
            AIm  = form.get_text(h);
            AIn  = form.get_text(i);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || AIt == "" || AIm == "" || AIn == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addAI ai:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + AIt + ":" + AIm + ":" + AIn, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, AIt, AIm, AIn;
        form.create_window("AI spawner", false);
        int a = form.create_input_box("type the minimum &x of the AI area");
        int b = form.create_input_box("type the maximum &x of the AI area");
        int c = form.create_input_box("type the minimum &y of the AI area");
        int d = form.create_input_box("type the maximum &y of the AI area");
        int e = form.create_input_box("how many milliseconds should be waited before next AI spawning?");
        int f = form.create_input_box("maximum amount of AI");
        int g = form.create_input_box("AI names. Use : to add new ones (e.g. lion: boar: bear)", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx   = form.get_text(a);
            mmx  = form.get_text(b);
            my   = form.get_text(c);
            mmy  = form.get_text(d);
            AIt  = form.get_text(e);
            AIm  = form.get_text(f);
            AIn  = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || AIt == "" || AIm == "" || AIn == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addAI ai:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + AIt + ":" + AIm + ":" + AIn, 0);
    }
}