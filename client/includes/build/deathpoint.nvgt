void builddeathpoint() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz;
        form.create_window("deathpoint", false);
        int a = form.create_input_box("enter the minimum &x of the deathpoint area");
        int b = form.create_input_box("enter the maximum &x of the deathpoint area");
        int c = form.create_input_box("enter the minimum &y of the deathpoint area");
        int d = form.create_input_box("enter the maximum &y of the deathpoint area");
        int e = form.create_input_box("enter the minimum &z of the deathpoint area");
        int f = form.create_input_box("enter the maximum &z of the deathpoint area");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            mz  = form.get_text(e);
            mmz = form.get_text(f);
            if (form.is_pressed(ok)) { form.reset(); break; }
            else if (form.is_pressed(can)) { form.reset(); return; }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "") {
            speak("canceled"); return;
        }


        send_reliable(peer_id, "adddeathpoint deathpoint:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz, 0);
    } else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy;
        form.create_window("deathpoint", false);
        int a = form.create_input_box("enter the minimum &x of the deathpoint area");
        int b = form.create_input_box("enter the maximum &x of the deathpoint area");
        int c = form.create_input_box("enter the minimum &y of the deathpoint area");
        int d = form.create_input_box("enter the maximum &y of the deathpoint area");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            if (form.is_pressed(ok)) { form.reset(); break; }
            else if (form.is_pressed(can)) { form.reset(); return; }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "") {
            speak("canceled"); return;
        }

        send_reliable(peer_id, "adddeathpoint deathpoint:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy, 0);
    }
}