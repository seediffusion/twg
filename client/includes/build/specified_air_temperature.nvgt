void buildspecified_air_temperature() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, text;
        form.create_window("specified air temperature", false);
        int a = form.create_input_box("type the minimum &x of the area");
        int b = form.create_input_box("type the maximum &x of the area");
        int c = form.create_input_box("type the minimum &y of the area");
        int d = form.create_input_box("type the maximum &y of the area");
        int e = form.create_input_box("type the minimum &z of the area");
        int f = form.create_input_box("type the maximum &z of the area");
        int g = form.create_input_box("enter the specified air &temperature", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(g, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);

        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx   = form.get_text(a);
            mmx  = form.get_text(b);
            my   = form.get_text(c);
            mmy  = form.get_text(d);
            mz   = form.get_text(e);
            mmz  = form.get_text(f);
            text = form.get_text(g);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }

        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || text == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addspecified_air_temperature specified_air_temperature:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + text, 0);
    }
