void buildzone() {
					if (d2dsupport == 0) {
						form.reset();
						string nums = "1234567890-";
						string mx, mmx, my, mmy, mz, mmz, t;
						form.create_window("build zone", false);
						int a = form.create_input_box("type the minimum &x of the zone");
						int b = form.create_input_box("type the maximum &x of the zone");
						int c = form.create_input_box("type the minimum &y of the zone");
						int d = form.create_input_box("type the maximum &y of the zone");
						int e = form.create_input_box("type the minimum &z of the zone");
						int f = form.create_input_box("type the maximum &z of the zone");
						int g = form.create_input_box("type the &text of the zone", "", "", 0, false, false);
						form.set_disallowed_chars(a, nums, true);
						form.set_disallowed_chars(b, nums, true);
						form.set_disallowed_chars(c, nums, true);
						form.set_disallowed_chars(d, nums, true);
						form.set_disallowed_chars(e, nums, true);
						form.set_disallowed_chars(f, nums, true);
						int ok = form.create_button("finish", false);
						int can = form.create_button("cancel", false, true);
						form.focus(a);
						while (true) {
							wait(5);
							form.monitor(); mainloop();
							mx = form.get_text(a);
							mmx = form.get_text(b);
							my = form.get_text(c);
							mmy = form.get_text(d);
							mz = form.get_text(e);
							mmz = form.get_text(f);
							t = form.get_text(g);
							if (form.is_pressed(ok)) {
								form.reset();
								break;
							} else if (form.is_pressed(can)) {
								form.reset();
								return;
							}
						}//while
						if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || t == "") {
							speak("canceled");
							return;
						}
						string ha = "";
						if (t != "") ha = ":" + t;
						string extra = "";
						int track = yesno("would you like this zone to be trackable via the zone tracker menu?");
						if (track == 1) extra = ":trackme";
						if (mx < min.x || mx > max.x ||
							mmx < min.x || mmx > max.x ||
