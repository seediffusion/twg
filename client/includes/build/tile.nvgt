void buildtile() {
    form.reset();
    string nums = "1234567890-";
    string mx, mmx, my, mmy, mz, mmz;
    if (d2dsupport == 0) {
        form.create_window("tile", false);
        int a = form.create_input_box("type the minimum x of the tile");
        int b = form.create_input_box("type the maximum x of the tile");
        int c = form.create_input_box("type the minimum y of the tile");
        int d = form.create_input_box("type the maximum y of the tile");
        int e = form.create_input_box("type the minimum z of the tile");
        int f = form.create_input_box("type the maximum z of the tile");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        int ok = form.create_button("continue and select the platform", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            mz  = form.get_text(e);
            mmz = form.get_text(f);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            }
            else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "") {
            speak("canceled");
            return;
        }
        string platform = plattypemenu();
        if (platform == "") return;
        string temp = "";
        int trackable = yesno("would you like this tile to be trackable via the tile tracker menu?");
        if (trackable == 1) temp = ":trackme";

        string se = "tile:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + platform + temp;
        send(0, buildadd + " " + se, 0);
        return;
    }
    else {
        form.create_window("tile", false);
        int a = form.create_input_box("type the minimum x of the tile");
        int b = form.create_input_box("type the maximum x of the tile");
        int c = form.create_input_box("type the minimum y of the tile");
        int d = form.create_input_box("type the maximum y of the tile");
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        int ok = form.create_button("continue and select the platform", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx  = form.get_text(a);
            mmx = form.get_text(b);
            my  = form.get_text(c);
            mmy = form.get_text(d);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            }
            else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "") {
            speak("canceled");
            return;
        }
        string platform = plattypemenu();
        if (platform == "") return;
        string temp = "";
        int trackable = yesno("would you like this tile to be trackable via the tile tracker menu?");
        if (trackable == 1) temp = ":trackme";
        string se = "tile:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + platform + temp;
        send(0, buildadd + " " + se, 0);
        return;
    }
}
