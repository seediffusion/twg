void buildtimedtext() {
    if (d2dsupport == 0) {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, mz, mmz, texttimer, t;
        form.create_window("timed text", false);
        int a = form.create_input_box("type the minimum &x of the timed text area");
        int b = form.create_input_box("type the maximum &x of the timed text area");
        int c = form.create_input_box("type the minimum &y of the timed text area");
        int d = form.create_input_box("type the maximum &y of the timed text area");
        int e = form.create_input_box("type the minimum &z of the timed text area");
        int f = form.create_input_box("type the maximum &z of the timed text area");
        int g = form.create_input_box("how many milliseconds should be waited before next speak");
        int h = form.create_input_box("type the &text", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        form.set_disallowed_chars(f, nums, true);
        form.set_disallowed_chars(g, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx    = form.get_text(a);
            mmx   = form.get_text(b);
            my    = form.get_text(c);
            mmy   = form.get_text(d);
            mz    = form.get_text(e);
            mmz   = form.get_text(f);
            texttimer = form.get_text(g);
            t     = form.get_text(h);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || mz == "" || mmz == "" || texttimer == "" || t == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addtimedtext timedtext:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ":" + texttimer + ":" + t, 0);
    }
    else {
        form.reset();
        string nums = "1234567890-";
        string mx, mmx, my, mmy, texttimer, t;
        form.create_window("timed text", false);
        int a = form.create_input_box("type the minimum &x of the timed text area");
        int b = form.create_input_box("type the maximum &x of the timed text area");
        int c = form.create_input_box("type the minimum &y of the timed text area");
        int d = form.create_input_box("type the maximum &y of the timed text area");
        int e = form.create_input_box("how many milliseconds should be waited before next speak");
        int f = form.create_input_box("type the &text", "", "", 0, false, false);
        form.set_disallowed_chars(a, nums, true);
        form.set_disallowed_chars(b, nums, true);
        form.set_disallowed_chars(c, nums, true);
        form.set_disallowed_chars(d, nums, true);
        form.set_disallowed_chars(e, nums, true);
        int ok = form.create_button("finish", false);
        int can = form.create_button("cancel", false, true);
        form.focus(a);
        while (true) {
            wait(5);
            form.monitor(); mainloop();
            mx    = form.get_text(a);
            mmx   = form.get_text(b);
            my    = form.get_text(c);
            mmy   = form.get_text(d);
            texttimer = form.get_text(e);
            t     = form.get_text(f);
            if (form.is_pressed(ok)) {
                form.reset();
                break;
            } else if (form.is_pressed(can)) {
                form.reset();
                return;
            }
        }
        if (mx == "" || mmx == "" || my == "" || mmy == "" || texttimer == "" || t == "") {
            speak("canceled");
            return;
        }

        send_reliable(peer_id, "addtimedtext timedtext:" + mx + ":" + mmx + ":0:0:" + my + ":" + mmy + ":" + texttimer + ":" + t, 0);
    }
}