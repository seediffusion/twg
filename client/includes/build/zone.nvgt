							mmz < min.z || mmz > max.z) {
							speak("error. Given coordinates are out of range");
							return;
						}
						send_reliable(peer_id, "addzone zone:" + mx + ":" + mmx + ":" + my + ":" + mmy + ":" + mz + ":" + mmz + ha + extra, 0);
					} else {
						form.reset();
